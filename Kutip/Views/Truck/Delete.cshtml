@model Kutip.Models.Truck

@{
    ViewData["Title"] = "Delete Truck";
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"> <a asp-controller="Dashboard" asp-action="Index"><i class="fas fa-home"></i> Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Truck" asp-action="Index"><i class="fas fa-truck"></i> Trucks</a></li>
            <li class="breadcrumb-item active" aria-current="page"><i class="fas fa-trash-alt"></i> Delete Truck</li>
        </ol>
    </nav>

    <div class="page-inner">

        <!-- Warning Alert -->
        <div class="alert alert-warning d-flex align-items-center shadow-sm" role="alert">
            <div>
                <strong>Warning:</strong> You are about to permanently delete this truck record.
                This action <strong>cannot</strong> be undone.
            </div>
        </div>

        <!-- Truck Details Card -->
        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-3">
                    Truck Details
                </h5>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <tbody>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.TruckNo)</th>
                                <td>@Html.DisplayFor(model => model.TruckNo)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Status)</th>
                                <td>@Html.DisplayFor(model => model.Status)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.DriverName)</th>
                                <td>@Html.DisplayFor(model => model.DriverName)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                <td>@Html.DisplayFor(model => model.Phone)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Company)</th>
                                <td>@Html.DisplayFor(model => model.Company)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                <td>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Modal Trigger -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                        <i class="fas fa-trash-alt"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Confirm Deletion Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to permanently delete this truck? This action <strong>cannot</strong> be undone.
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post" class="m-0 p-0">
                    <input type="hidden" asp-for="TruckId" />
                    <button type="submit" class="btn btn-danger btn-sm">Yes, Delete</button>
                </form>
                <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
