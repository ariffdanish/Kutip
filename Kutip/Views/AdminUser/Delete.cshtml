@model Kutip.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index"><i class="fas fa-home"></i> Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="AdminUser" asp-action="Index"><i class="fas fa-users"></i> User Management</a></li>
            <li class="breadcrumb-item active" aria-current="page"><i class="fas fa-user-times"></i> Delete User</li>
        </ol>
    </nav>

    <div class="page-inner">

        <!-- Warning Alert -->
        <div class="alert alert-warning d-flex align-items-center shadow-sm" role="alert">
            <div>
                <strong>Warning:</strong> You are about to permanently delete this user account. This action <strong>cannot</strong> be undone.
            </div>
        </div>

        <!-- User Details Card -->
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-3">
                    <i class="fas fa-user"></i> User Details
                </h5>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <tbody>
                            <tr>
                                <th>Email</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>User Name</th>
                                <td>@Model.UserName</td>
                            </tr>
                            <tr>
                                <th>Phone Number</th>
                                <td>@Model.PhoneNumber</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Trigger Modal Button -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                        <i class="fas fa-user-times"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Confirm Deletion -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to permanently delete this user? This action <strong>cannot</strong> be undone.
            </div>
            <div class="modal-footer">
                <form asp-action="DeleteConfirmed" method="post" class="m-0 p-0">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-sm">Yes, Delete</button>
                </form>
                <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
