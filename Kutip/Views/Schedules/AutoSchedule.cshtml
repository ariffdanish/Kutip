<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb bg-white shadow-sm px-3 py-2 rounded">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Schedules" asp-action="Index"><i class="fas fa-calendar-alt"></i> Schedules</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            Smart Auto Scheduling
        </li>
    </ol>
</nav>


<div class="card shadow">
    <div class="card-body">
        <h5 class="card-title">Smart Auto Scheduling</h5>
        <table class="table table-bordered mt-3">
            <tbody>
                <tr>
                    <th>Unscheduled Bins</th>
                    <td>@ViewBag.BinCount</td>
                </tr>
                <tr>
                    <th>Available Trucks</th>
                    <td>@ViewBag.TruckCount</td>
                </tr>
            </tbody>
        </table>

        @if (ViewBag.CanSchedule)
        {
            <form asp-action="AutoScheduleConfirmed" method="post">
                <button type="submit" class="btn btn-primary">Run Auto Scheduling</button>
            </form>
        }
        else
        {
            <div class="alert alert-warning mt-3">
                Not enough bins or trucks available to perform scheduling.
            </div>
        }

        <a href="@Url.Action("Index", "Schedules")" class="btn btn-outline-secondary mt-3">
            ← Back to Schedule List
        </a>
    </div>
</div>
