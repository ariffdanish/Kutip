@{
    ViewData["Title"] = "Smart Auto Scheduling";
}

<div class="container">
    <nav aria-label="breadcrumb" class="my-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index"><i class="fas fa-home"></i> Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index"><i class="fas fa-calendar-alt"></i> Schedules</a></li>
            <li class="breadcrumb-item active" aria-current="page">Smart Auto Scheduling</li>
        </ol>
    </nav>

    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-header bg-light">
                        <h4 class="card-title mb-0">Smart Auto Scheduling</h4>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            <div class="alert @(ViewBag.CanSchedule ? "alert-success" : "alert-danger") alert-dismissible fade show mb-4" role="alert">
                                <strong>Status:</strong> @ViewBag.Message
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <table class="table table-bordered mb-4">
                            <tbody>
                                <tr>
                                    <th scope="row" style="width: 50%;">Unscheduled Bins</th>
                                    <td>@ViewBag.BinCount</td>
                                </tr>
                                <tr>
                                    <th scope="row">Available Trucks</th>
                                    <td>@ViewBag.TruckCount</td>
                                </tr>
                            </tbody>
                        </table>


                        @if (ViewBag.CanSchedule)
                        {
                            <form asp-action="AutoScheduleConfirmed" method="post" class="mb-3">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fas fa-cogs"></i> Smart Schedule
                                </button>
                            </form>
                        }

                        <a asp-action="Index" class="btn btn-primary btn-sm">
                            <i class="fas fa-arrow-left"></i> Back to Schedule List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
