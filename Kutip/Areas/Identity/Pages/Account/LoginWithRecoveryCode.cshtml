@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery Code Verification";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-3">
                        <i class="bi bi-shield-lock me-2"></i> Recovery Code Login
                    </h2>

                    <p class="text-muted text-center mb-4">
                        You’ve chosen to log in using a recovery code. This method won’t remember your session until you log in again with your authenticator app or disable 2FA.
                    </p>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="Enter recovery code" />
                            <label asp-for="Input.RecoveryCode">Recovery Code</label>
                            <span asp-validation-for="Input.RecoveryCode" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Log In
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="mb-0">
                            <i class="bi bi-arrow-left-circle me-1"></i>
                            <a asp-page="./Login">Back to login with authenticator app</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
