@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}



<div class="text-center">
    <h3 class="mb-0">@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />
</div>

<br />

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
        
            <div class="card-body">
                
                <form id="change-password-form" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Old Password -->
                    <div class="form-floating mb-4">
                        <input asp-for="Input.OldPassword" class="form-control" type="password" autocomplete="current-password" placeholder="Old Password" aria-required="true" />
                        <label asp-for="Input.OldPassword"></label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                    </div>

                    <!-- New Password -->
                    <div class="form-floating mb-4">
                        <input asp-for="Input.NewPassword" class="form-control" type="password" autocomplete="new-password" placeholder="New Password" aria-required="true" />
                        <label asp-for="Input.NewPassword"></label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                    </div>

                    <!-- Confirm New Password -->
                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" placeholder="Confirm New Password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-shield-lock-fill me-1"></i> Update Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
