@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row justify-content-center mt-4">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">

                <h3 class="card-title text-center mb-4">@ViewData["Title"]</h3>

                <p class="text-muted">
                    Your account contains personal data you have provided. You can choose to download a copy or delete the data entirely.
                </p>

                <div class="alert alert-warning" role="alert">
                    <strong class="text-danger">Warning:</strong> Deleting your personal data will <strong>permanently remove your account</strong>. This action is irreversible.
                </div>

                <div class="d-flex flex-column flex-md-row gap-3 mt-4">
                    <form id="download-data" asp-page="DownloadPersonalData" method="post" class="w-100">
                        <button class="btn btn-outline-primary w-100" type="submit">
                            <i class="bi bi-download me-1"></i> Download Personal Data
                        </button>
                    </form>

                    <a id="delete" asp-page="DeletePersonalData" class="btn btn-outline-danger w-100">
                        <i class="bi bi-trash-fill me-1"></i> Delete Personal Data
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
