@model string

@if (!string.IsNullOrEmpty(Model))
{
    var isError = Model.StartsWith("Error", StringComparison.OrdinalIgnoreCase);
    var statusMessageClass = isError ? "danger" : "success";

    <div class="alert alert-@statusMessageClass alert-dismissible fade show shadow-sm" role="alert" aria-live="assertive" aria-atomic="true">
        <strong class="me-2">@((isError) ? "Error:" : "Success:")</strong>
        <span>@Model</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
