@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <div class="card shadow">
            <div class="card-body p-4">
                <h2 class="card-title text-center mb-4">
                    <i class="bi bi-lock-fill me-2"></i> Forgot Password
                </h2>
                <p class="text-muted text-center mb-4">
                    For password reset assistance, please contact the system administrator at:
                </p>
                <div class="alert alert-info text-center">
                    <strong>Email:</strong> <a href="mailto:Admin@Kutip">Admin@Kutip</a>
                </div>

                <div class="mt-3 text-center">
                    <a asp-page="./Login" class="text-decoration-none">
                        <i class="bi bi-arrow-left me-1"></i> Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
