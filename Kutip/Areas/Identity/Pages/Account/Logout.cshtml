@page
@model LogoutModel
@{
    ViewData["Title"] = "Log Out";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <div class="card shadow">
            <div class="card-body p-4 text-center">
                <h2 class="card-title mb-4">
                    <i class="bi bi-box-arrow-right me-2"></i>@ViewData["Title"]
                </h2>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <p class="mb-3">You are currently signed in. Click below to log out.</p>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-box-arrow-left me-1"></i> Logout
                        </button>
                    </form>
                }
                else
                {
                    <p class="alert alert-success">
                        You have successfully logged out of the application.
                    </p>
                    <div class="mt-4">
                        <a asp-page="/Account/Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Back to Login
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
