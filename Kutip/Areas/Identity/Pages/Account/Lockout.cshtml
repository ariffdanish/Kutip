@page
@model LockoutModel
@{
    ViewData["Title"] = "Account Locked";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <div class="card shadow border-warning">
            <div class="card-body p-4 text-center">
                <h2 class="card-title text-warning mb-3">
                    <i class="bi bi-lock-fill me-2"></i>@ViewData["Title"]
                </h2>

                <p class="alert alert-warning">
                    This account has been temporarily locked due to multiple failed login attempts.
                    <br />Please try again later or contact support if you need assistance.
                </p>

                <div class="mt-4">
                    <a asp-page="/Account/Login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-left me-1"></i> Return to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
